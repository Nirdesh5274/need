{
  "version": 2,
  "installCommand": "npm install --prefix api && npm install --prefix frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "api/**"
    }
  }
}
